{
  "manifest_version": 3,
  "name": "Shot2TG",
  "version": "2.0.0",
  "description": "Brauzer oynasidan skrinshot olib Telegram botga yuboradi (avto/qo'lda).",
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://api.telegram.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shot2TG",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
